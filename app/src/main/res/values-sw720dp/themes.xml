<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Helisur" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/fondo_toolbar</item>
        <item name="android:textColorSecondary">@color/fondo_toolbar</item>
        <item name="actionMenuTextColor">@color/fondo_toolbar</item>

    </style>


    <style name="Theme.Helisur.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <!-- Personaliza los colores -->
        <item name="itemTextAppearance">@style/CustomNavigationItemText</item>
        <item name="itemIconTint">#B8B6B4</item> <!-- Color del Ã­cono -->
        <item name="itemTextColor">#B8B6B4</item> <!-- Color del texto -->
        <!-- Fondo del NavigationView -->
    </style>

    <style name="CustomNavigationItemText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#F44336</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

</resources>