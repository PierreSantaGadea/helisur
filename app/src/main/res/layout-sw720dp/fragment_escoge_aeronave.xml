<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fondo_pantalla_general"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/robotobold"
        android:text="Formatos"
        android:textColor="@color/titulo_pantalla_general"
        android:textSize="35dp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/robotomedium"
        android:text="Modelo Aeronave"
        android:textColor="@color/titulo_pantalla_general"
        android:textSize="25dp" />


    <RelativeLayout
        android:id="@+id/rlAeronave"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_text_box"
        android:padding="0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <Spinner
                android:id="@+id/spiAeronave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="30dp"
                android:paddingBottom="-5dp"
                android:textColor="@color/color_texto_cajatexto"/>

        </LinearLayout>

    </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/robotomedium"
        android:text="Formato"
        android:textColor="@color/titulo_pantalla_general"
        android:textSize="25dp" />


    <RelativeLayout
        android:id="@+id/rlFormato"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_text_box"
        android:padding="0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <Spinner
                android:id="@+id/spiFormato"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="30dp"
                android:paddingBottom="-5dp"
                android:textColor="@color/color_texto_cajatexto"/>

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:src="@drawable/ic_down"
            android:visibility="gone"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/btnCotinuar"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/shape_button_principal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Continuar"
            android:textColor="@color/texto_boton_principal"
            android:textSize="22dp" />

    </RelativeLayout>


</LinearLayout>