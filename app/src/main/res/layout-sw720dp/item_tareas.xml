<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/contenedorHijo1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_contenedor_tarea_hijo"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/nombreTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:text="Lavar Motor"
            android:textColor="@color/texto_contenedor_tarea_hijo"
            android:textSize="23dp" />

        <LinearLayout
            android:id="@+id/contenedorReportajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4">

                    <CheckBox
                        android:id="@+id/chbx_Reportaje_No_Aplica"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No aplica (NA)"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="21dp"
                        android:buttonTint="@color/titulo_pantalla_general"
                        android:textColor="@color/texto_simple_pantalla_general"/>

                    <CheckBox
                        android:id="@+id/chbx_Reportaje_RTV"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportaje para registro sólo en RTV"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="21dp"
                        android:buttonTint="@color/titulo_pantalla_general"
                        android:textColor="@color/texto_simple_pantalla_general"/>

                    <CheckBox
                        android:id="@+id/chbx_Reportaje_DanosMenores"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportaje en daños menores"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="21dp"
                        android:buttonTint="@color/titulo_pantalla_general"
                        android:textColor="@color/texto_simple_pantalla_general"/>

                    <CheckBox
                        android:id="@+id/chbx_Reportaje_MELMDS"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportaje MEL / MDS"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="21dp"
                        android:buttonTint="@color/titulo_pantalla_general"
                        android:textColor="@color/texto_simple_pantalla_general"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">


                    <RelativeLayout
                        android:id="@+id/rl_Reportaje_Motivo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/shape_control_disabled"
                        android:padding="0dip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="0dp">

                            <EditText
                                android:id="@+id/et_Reportaje_Motivo"
                                android:hint="Motivo"
                                android:textColorHint="@color/borde_cajatexto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="10dp"
                                android:paddingBottom="10dp"
                                android:textSize="21dp"
                                android:gravity="top|left"
                                android:textColor="@color/color_texto_cajatexto"
                                android:enabled="false"/>

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:src="@drawable/ic_down"
                            android:visibility="gone"/>

                    </RelativeLayout>



                </LinearLayout>


            </LinearLayout>








        </LinearLayout>


    </LinearLayout>


</LinearLayout>