<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/contenedorHijo1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_contenedor_anotaciones"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/nombreTarea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/robotobold"
                    android:text="Lavar Motor"
                    android:textColor="@color/texto_contenedor_tarea_hijo"
                    android:textSize="18dp" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_fail" />


                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/contenedorReportajes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5"
                android:layout_marginTop="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/tv_Reportaje_No_Aplica"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No aplica (NA)"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="17dp"
                        android:textColor="@color/texto_simple_pantalla_general"/>

                    <TextView
                        android:id="@+id/tv_Reportaje_RTV"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportaje para registro sólo en RTV"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="17dp"
                        android:textColor="@color/texto_simple_pantalla_general"/>

                    <TextView
                        android:id="@+id/tv_Reportaje_DanosMenores"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportaje en daños menores"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="17dp"
                        android:textColor="@color/texto_simple_pantalla_general"/>

                    <TextView
                        android:id="@+id/tv_Reportaje_MELMDS"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reportaje MEL / MDS"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="17dp"
                        android:textColor="@color/texto_simple_pantalla_general"/>

                    <TextView
                        android:id="@+id/tv_Reportaje_Motivo"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/robotoregular"
                        android:textSize="17dp"
                        android:textColor="@color/texto_simple_pantalla_general"/>





                </LinearLayout>






            </LinearLayout>


        </LinearLayout>






    </RelativeLayout>


</LinearLayout>