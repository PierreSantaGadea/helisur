<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/fondo_pantalla_general">


    <LinearLayout
        android:id="@+id/listaFormatosPendientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/fondo_pantalla_general"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:id="@+id/llBack"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:contentDescription="Regresar"
                    android:src="@drawable/ic_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Formatos"
                    android:textColor="@color/titulo_pantalla_general"
                    android:textSize="15dp"
                    android:layout_centerInParent="true"/>


            </LinearLayout>




            <TextView
                android:id="@+id/tvTituloFormato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotobold"
                android:text=""
                android:textColor="@color/titulo_pantalla_general"
                android:textSize="25dp"
                android:layout_centerInParent="true"/>






        </RelativeLayout>

        <TextView
            android:id="@+id/nombreAeronave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotobold"
            android:text=""
            android:textColor="@color/titulo_pantalla_general"
            android:textSize="20dp"
            android:layout_centerInParent="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/robotolight"
            android:text="Formatos con discrepancias"
            android:textColor="@color/titulo_pantalla_general"
            android:textSize="18dp" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFormatosPrevuelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/addNewPreVuelo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_pluss" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llEditarFormato"
        android:orientation="vertical"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:id="@+id/llBackEditarFormato"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:contentDescription="Regresar"
                    android:src="@drawable/ic_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="lista"
                    android:textColor="@color/titulo_pantalla_general"
                    android:textSize="15dp"
                    android:layout_centerInParent="true"/>


            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotobold"
                android:text="Discrepancias"
                android:textColor="@color/titulo_pantalla_general"
                android:textSize="22dp"
                android:layout_centerInParent="true"/>






        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/tvTituloFormatoeditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/robotomedium"
                android:text=""
                android:textColor="@color/titulo_pantalla_general"
                android:textSize="20dp"
                android:justificationMode="inter_word"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvTituloAeronave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotomedium"
                android:text=""
                android:textColor="@color/titulo_pantalla_general"
                android:textSize="18dp"
                android:justificationMode="inter_word"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/tvDocumentacion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_document"
                android:layout_marginRight="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotoregular"
                android:text="RTV"
                android:textColor="@color/titulo_pantalla_general"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_text_box"
                android:padding="0dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <EditText
                        android:id="@+id/etRTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="-5dp"
                        android:textSize="15dp"
                        android:textColor="@color/color_texto_cajatexto"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:src="@drawable/ic_down"
                    android:visibility="gone"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotoregular"
                android:text="Ubicación"
                android:textColor="@color/titulo_pantalla_general"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_text_box"
                android:padding="0dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <Spinner
                        android:id="@+id/spiUbicacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:paddingStart="0dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="30dp"
                        android:paddingBottom="-5dp"
                        android:textColor="@color/color_texto_cajatexto"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:src="@drawable/ic_down"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/robotomedium"
                android:text="Anotaciones"
                android:textColor="@color/titulo_pantalla_general"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llContenedorReportajes"
                android:orientation="vertical"
                android:layout_marginTop="20dp">



            </LinearLayout>


            <CheckBox
                android:id="@+id/chbx_reportaje1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje2"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje3"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje4"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje5"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje6"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje7"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje8"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje9"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/chbx_reportaje10"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:fontFamily="@font/robotoregular"
                android:textSize="15dp"
                android:buttonTint="@color/titulo_pantalla_general"
                android:textColor="@color/texto_simple_pantalla_general"
                android:visibility="gone"/>



            <RelativeLayout
                android:id="@+id/btnGuardarTodo"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/shape_button_principal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:text="Guardar"
                    android:textColor="@color/texto_boton_principal"
                    android:textSize="18dp" />


            </RelativeLayout>


        </LinearLayout>





    </LinearLayout>


</RelativeLayout>